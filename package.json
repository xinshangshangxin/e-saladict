{
  "name": "e-saladict",
  "version": "0.0.1",
  "description": "沙拉词典桌面版",
  "main": "./main/index.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "npm rebuild --runtime=electron --target=$(electron -v) --disturl=https://atom.io/download/atom-shell --abi=$(electron -a)",
    "build": "npm run buildOrigin && npm run buildReplacer",
    "buildOrigin": "cd ext-saladict && npm run build && cd ..",
    "buildReplacer": "node pre-build/index.js WebextensionsEmulator && cd webextensions-emulator && npm run build && rm -rf ../ext-saladict/pre-build/chrome/mock && mkdir -p ../ext-saladict/pre-build/chrome/mock && cp dist/** ../ext-saladict/pre-build/chrome/mock && node ../pre-build/index.js",
    "dist:mac": "electron-builder --mac",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "saladict",
    "desktop",
    "mac",
    "macos"
  ],
  "author": "xinshangshangxin",
  "license": "MIX",
  "dependencies": {
    "@s4p/sdb": "^0.5.0",
    "bluebird": "^3.7.2",
    "cross-spawn": "^7.0.3",
    "electron-is-dev": "^1.2.0",
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^4.2.2",
    "electron-window-state": "^5.0.3",
    "nedb": "^1.8.0",
    "node-static": "^0.7.11",
    "robotjs": "^0.6.0",
    "rxjs": "^6.6.0"
  },
  "devDependencies": {
    "electron": "^8.4.0",
    "electron-builder": "^22.7.0",
    "fs-extra": "^9.0.1"
  },
  "build": {
    "files": [
      "ext-saladict/pre-build/chrome/**/*",
      "main/**/*",
      "node_modules/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "appId": "com.xinshangshangxin.saladict",
    "asar": false,
    "protocols": [
      {
        "name": "saladict",
        "schemes": [
          "saladict"
        ]
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "main/assets/icon.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "main/assets/icon.png"
    }
  }
}
